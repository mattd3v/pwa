{
  "name": "pwa",
  "version": "1.0.0",
  "description": "Modern webpages with progressive enhancement.",
  "private": true,
  "scripts": {
    "build": "npm run build:static && npm run build:app",
    "build:static": "([  -d public/ ] || mkdir public) && cp -r static/* public/",
    "build:app": "eleventy --input app/ --output public/",
    "clean": "rm -rf public/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mattd3v/pwa.git"
  },
  "author": "",
